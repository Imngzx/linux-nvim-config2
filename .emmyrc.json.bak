{
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",
      "?/lua/?/init.lua"
    ]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "$VIMRUNTIME/lua",
      "$LLS_Addons/luvit",
      "$LLS_Addons/luvit/library/uv",
      "$HOME/.local/share/nvim/lazy",
      "${3rd}/luv/library"
    ],
    "ignoreGlobs": [
      "**/*_spec.lua"
    ]
  }
}
